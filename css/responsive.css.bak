/*----------mobile responsive----------*/
@media(max-width:576px){
	.navbar-toggler{
		color: #fff;
        font-size: 25px;
	    position: absolute;
       top: 0;
       right: 0;
	}
	.banner-content {
	   text-align:center;
   }
	.banner-content h1 {
    font-size: 30px;
	}
    .btn {
    padding: 12px 22px;
	}
	.card-body {
    min-height: 239px;
	}
	.action {
    background-position: center;
	}
	.act-info p {
    font-size: 13px;
	}
	.act-info {
	   text-align:center;
   }
   .act-but {
	   text-align:center;
   }
   .input-group {
        width:100%;
   }
   .float-end {
    float: left!important;
   }
}

/*-----------------tab responsive----------------*/
@media(min-width:768px){
	.navbar-toggler{
	   color: #fff;
       font-size:28px;
	   position: absolute;
       top: 0;
       right: 0;
	}
	.banner-content {
	   text-align:center;
   }
    .banner-content h1{
	    font-size:35px;
   }
   .nav-button{
	   text-align:center;
   }
   .btn{
	  padding:12px 33px;
   }
   .act-info {
	   text-align:center;
   }
   .act-but {
	   text-align:center;
   }
   .act-info p {
    font-size: 13px;
	}
   .input-group {
        width:100%;
   }
   .ps-4 {
     padding-left:0rem!important;
   }
   .client-logo {
    font-size: 72px;
   }
   .ft-content {
    font-size: 15px;
   }
}

/*-----------------laptop responsive----------------*/
@media(min-width:992px){
	.banner-content {
	   text-align:left;
   }
    .banner-content h1{
	    font-size:46px;
   }
   .nav-button{
	   text-align:left;
   }
   .act-info {
	   text-align:left;
   }
   .p-3 {
    padding: 1.7rem!important;
   }
   .accordion-flush .accordion-item .accordion-button {
    font-size: 15px;
   }
   .foot-content-2 p {
    font-size: 14px;
   }
   .client-logo {
    font-size:0px;
   }
   .input-group {
    width:50%;
   }
   .card .ps-5 {
    padding-left: 1rem!important;
   }
}

/*-----------------destop responsive----------------*/
@media(min-width:1200px){
	.banner-content {
	   text-align:left;
   }
   .nav-button{
	   text-align:left;
   }
   .act-info {
	   text-align:left;
   }
   .act-info p {
    font-size:16px;
	}
   .accordion-flush .accordion-item .accordion-button {
    font-size: 18px;
   }
   .input-group {
    width:50%;
   }
   .p-3 {
    padding: 1rem!important;
   }
   .action {
    background-position: none;
   }
}